<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deep.backend.model.dao.EventMapper">

    <resultMap id="EventResultMap" type="com.deep.backend.model.dto.EventDTO">
        <id property="eventId" column="event_id"/>
        <result property="eventPhotoId" column="event_photo_id"/>
        <result property="userId" column="user_id"/>
        <result property="fairyTaleId" column="fairy_tale_id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="location" column="location"/>
    </resultMap>

    <insert id="createEvent" parameterType="com.deep.backend.model.dto.EventDTO" useGeneratedKeys="true" keyProperty="eventId">
        INSERT INTO Event (event_photo_id, user_id, fairy_tale_id, title, description, start_time, end_time, location)
        VALUES (#{eventPhotoId}, #{userId}, #{fairyTaleId}, #{title}, #{description}, #{startTime}, #{endTime}, #{location})
    </insert>

    <select id="getEvent" parameterType="int" resultMap="EventResultMap">
        SELECT * FROM Event WHERE event_id = #{eventId}
    </select>

    <select id="getAllEvents" resultMap="EventResultMap">
        SELECT * FROM Event
    </select>

    <update id="updateEvent" parameterType="com.deep.backend.model.dto.EventDTO">
        UPDATE Event
        SET event_photo_id = #{eventPhotoId},
            user_id = #{userId},
            fairy_tale_id = #{fairyTaleId},
            title = #{title},
            description = #{description},
            start_time = #{startTime},
            end_time = #{endTime},
            location = #{location}
        WHERE event_id = #{eventId}
    </update>

    <delete id="deleteEvent" parameterType="int">
        DELETE FROM Event WHERE event_id = #{eventId}
    </delete>
</mapper>